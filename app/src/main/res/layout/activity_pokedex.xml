<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/background"
    android:background="@drawable/pokedex"
    tools:context=".Pokedex">

    <ImageView
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:id="@+id/pokeImage"
        android:layout_marginTop="70sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/pokeball"/>


    <EditText
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:id="@+id/pokeSearch"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:hint="Enter Pokemon Name"
        android:layout_marginBottom="10sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/searchBtn"
            android:textSize="15sp"
            android:text="Search Pokemon"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"/>

        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/clearBtn"
            android:textSize="15sp"
            android:backgroundTint="#000000"
            android:layout_marginLeft="15sp"
            android:textColor="#FFFFFF"
            android:text="Clear"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pokeName"
        android:layout_margin="10sp"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="NAME"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="80sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TYPE:"
                android:id="@+id/pokeTypeTitle"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INDEX NO:"
                android:textStyle="bold"
                android:id="@+id/pokeIndexTitle"
                android:textColor="@color/black"
                android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="60sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokeType"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokeIndex"
                android:textColor="@color/black"
                android:textSize="25sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:text=" "
            android:layout_marginLeft="12dp"
            android:id="@+id/btnExit"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:textSize="40sp"
            android:paddingRight="40dp"
            android:textColor="@color/black"
            android:id="@+id/pokeBaseTitle"
            android:textStyle="bold"
            android:text="BASE STATS"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="80sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HEALTH:"
                android:id="@+id/pokeHealthTitle"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATTACK:"
                android:id="@+id/pokeAttackTitle"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEFENSE:"
                android:textStyle="bold"
                android:id="@+id/pokeDefenseTitle"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SP ATTACK:"
                android:id="@+id/pokeSATitle"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SP DEFENSE:"
                android:id="@+id/pokeSDTitle"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPEED:"
                android:id="@+id/pokeSpeedTitle"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textStyle="bold"
            android:layout_marginLeft="80sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokeHealth"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokeAttack"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokeDefense"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokeSA"
                android:textColor="@color/black"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokeSD"
                android:textColor="@color/black"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokeSpeed"
                android:textColor="@color/black"
                android:textSize="25sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
    </LinearLayout>
    <TextView
        android:layout_width="225dp"
        android:layout_height="30dp"
        android:layout_marginLeft="155sp"
        android:text="  "
        android:id="@+id/btnChange"/>

</LinearLayout>